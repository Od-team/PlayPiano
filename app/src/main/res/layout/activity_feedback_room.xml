<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="1"
    android:background="@drawable/bg_blue_white_gradient"
    tools:context=".FeedbackRoomActivity">

    <TextView
        android:id="@+id/room_teacher_name_textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:layout_weight="0.15"
        android:layout_marginBottom="12dp"
        android:text="선생님"
        android:textSize="30dp"
        android:textColor="@color/black_color"
        android:fontFamily="@font/cookierun_black"
        android:gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/feedback_content_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>